<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-4">
            <% if flash[:alert] %>
                <div class="alert alert-danger"><%= flash[:alert] %></div>
            <% end %>
            <h1>ご予約ページ</h1>
            <%= form_with model: @reservation, url: reservations_path do |f| %>
                <% if @movie.present? %>
                    <%= f.label :movie_id, "選択中の映画", class: "form-label" %>
                    <%= f.text_field :movie_id, value: @movie.name, class: "form-control text-center", readonly: true %>
                    <%= f.hidden_field :movie_id, value: @movie.id %>
                <% end %>

                <%= f.label :date, "選択中の日時", class: "form-label" %>
                <h3>選択日のスケジュール</h3>
                <p><%= @schedule.display_time if @schedule.start_time.present? && @schedule.end_time.present? %></p>

                <%= f.label :sheet, "選択中のシート", class: "form-label" %>
                <%= f.text_field :sheet_id, value: @sheet, class: "form-control text-center", readonly: true %>

                <%= f.label :schedule, "選択中のスケジュール", class: "form-label" %>
                <%= f.text_field :schedule_id, value: @schedule.id, class: "form-control text-center", readonly: true %>

                <%= f.label :email, "メールアドレス", class: "form-label mt-3" %>
                <%= f.text_field :email, class: "form-control text-center", value: @current_user&.email || "" %>
                
                <%= f.label :name, "名前", class: "form-label" %>
                <%= f.text_field :name, class: "form-control text-center", value: @current_user&.name || "" %>
                
                
                <%= f.submit "確定", class: "mt-3" %>
            <% end %>
        </div>
    </div>
</div>
